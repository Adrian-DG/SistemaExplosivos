<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SistemaExplosivos</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SistemaExplosivos.styles.css" asp-append-version="true" />

    <style>
        .dropdown-link, .dropdown-link:hover {
           color: white;
        }
    </style>


</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SistemaExplosivos</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                       
                        <li class="nav-item">
                            <div class="collapse navbar-collapse" id="navbarNavDarkDropdown">
                                <ul class="navbar-nav">
                                    <li class="nav-item dropdown">
                                        <button class="btn dropdown-toggle dropdown-link" data-bs-toggle="dropdown" aria-expanded="false">
                                            Miscelaneos
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-dark">
                                            <li><a class="nav-link text-light" asp-area="" asp-controller="Tipos" asp-action="Index">Tipos</a></li>
                                            <li><a class="nav-link text-light" asp-area="" asp-controller="SubTipos" asp-action="Index">SubTipos</a></li>
                                            <li><a class="nav-link text-light" asp-area="" asp-controller="Calibres" asp-action="Index">Calibres</a></li>
                                            <li> <a class="nav-link text-light" asp-area="" asp-controller="Marcas" asp-action="Index">Marcas</a></li>
                                            <li><a class="nav-link text-light" asp-area="" asp-controller="Modelos" asp-action="Index">Modelos</a></li>
                                        </ul>
                                    </li>
                                </ul>
                            </div>
                        </li>

                        <li class="nav-item">
                            <div class="collapse navbar-collapse" id="navbarNavDarkDropdown">
                                <ul class="navbar-nav">
                                    <li class="nav-item dropdown">
                                        <button class="btn dropdown-toggle dropdown-link" data-bs-toggle="dropdown" aria-expanded="false">
                                            Organizaciones
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-dark">
                                            <li><a class="nav-link text-light" asp-area="" asp-controller="Titulares" asp-action="Index">Titulares</a></li>
                                            <li><a class="nav-link text-light" asp-area="" asp-controller="Empresas" asp-action="Index">Empresas</a></li>                                           
                                        </ul>
                                    </li>
                                </ul>
                            </div>
                        </li>

                        <li class="nav-item">
                            <div class="collapse navbar-collapse" id="navbarNavDarkDropdown">
                                <ul class="navbar-nav">
                                    <li class="nav-item dropdown">
                                        <button class="btn dropdown-toggle dropdown-link" data-bs-toggle="dropdown" aria-expanded="false">
                                            Inventario
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-dark">
                                            <li><a class="nav-link text-light" asp-area="" asp-controller="Articulos" asp-action="Index">Articulos</a></li>                                           
                                        </ul>
                                    </li>
                                </ul>
                            </div>
                        </li>
                  
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - SistemaExplosivos - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
